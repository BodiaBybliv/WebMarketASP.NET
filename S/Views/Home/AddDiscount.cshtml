
@{
    ViewBag.Title = "AddDiscount";
}


<form method="post" action="/Home/AddDiscount">
    <div class="form-group">
        <input type="hidden" class="form-control" name="Id" value="@Model.Id">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Category" value="@Model.Category">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Country" value="@Model.Country">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Strenght" value="@Model.Strenght">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Size" value="@Model.Size">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label for="Discount">Discount</label>
        <input type="number" class="form-control" name="Discount" placeholder="Enter discount">
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>

