
@{
    ViewBag.Title = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/Home/Edit">
    <div class="form-group">
        <input type="hidden" class="form-control" name="Id" value="@Model.Id">
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Enter Name" value="@Model.Name" required>
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" name="Category" placeholder="Enter Category" value="@Model.Category">
    </div>
    <div class="form-group">
        <label for="Country">Country</label>
        <input type="text" class="form-control" name="Country" placeholder="Enter Country" value="@Model.Country">
    </div>
    <div class="form-group">
        <label for="Strenght">Strenght</label>
        <input type="number" class="form-control" name="Strenght" placeholder="Enter Strenght" value="@Model.Strenght">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" name="Size" placeholder="Enter Size" value="@Model.Size">
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" name="Price" placeholder="Enter Price" value="@Model.Price" required>
    </div>
    <div class="form-group">
        <label for="Discount">Discount</label>
        <input type="number" class="form-control" name="Discount" placeholder="Enter discount" value="@Model.Discount" required>
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>